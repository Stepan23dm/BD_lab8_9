<h1>{{viewTitle}}</h1>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>

<form action="/articles" method="POST" autocomplete="off">

    <input type="hidden" name="_id" value="{{articles._id}}">
    
    <div class="form-group">
        <label>Имя автора</label>
        <input type="text" class="form-control" name="aut_name" placeholder="Имя Фамилия" value="{{articles.aut_name}}">
        <div class="text-danger">
            {{articles.aut_nameError}}</div>
    </div>

    <div class="form-group">
        <label>Название статьи</label>
        <input type="text" class="form-control" name="name_article" placeholder="Название" value="{{articles.name_article}}">
        <div class="text-danger">
            {{articles.name_articleError}}</div>
    </div>

    <div class="form-group">
        <label>Интро статьи</label>
        <input type="text" class="form-control" name="content" placeholder="Интро" value="{{articles.content}}">
        <div class="text-danger">
            {{articles.contentError}}</div>
    </div>

    <div class="form-group">
        <label>Содержание статьи</label>
        <input type="text" class="form-control" name="text" placeholder="Содержание" value="{{articles.text}}">
        <div class="text-danger">
            {{articles.textError}}</div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label>Дата публикации</label>
            <input type="text" class="form-control" name="pub_date" placeholder="YYYY-MM-DD" value="{{articles.pub_date}}">
            <div class="text-danger">
                {{articles.pub_dateError}}</div>
        </div>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/articles/list"><i class="fa fa-list-alt"></i> View All Articles</a>
        <a class="btn btn-secondary" href="/articles/listAut"><i class="fa fa-list-alt"></i> View All Authors</a>
    </div>

    <div class="form-group">
        <a class="btn btn-secondary" href="articles/searchArt"><i class="fa fa-list-alt"></i> Search article</a>
        <a class="btn btn-secondary" href="articles/searchAut"><i class="fa fa-list-alt"></i> Search author</a>
        <a class="btn btn-secondary" href="articles/searchDate"><i class="fa fa-list-alt"></i> Search at date</a>
    </div>
</form>


