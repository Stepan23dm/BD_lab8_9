<h3><a class="btn btn-secondary" href="/articles"><i class="fa fa-arrow-left"></i> Insert article</a> Author List</h3>
<script src='http://code.jquery.com/jquery-1.7.1.js'></script>
<script>
    $(function(){
        $('table td:first-child').each(function (i) {
                $(this).html(i+1);
        });
    });
</script>

<form action="/articles/searchAut" method="get" autocomplete="off"> 
    <div class="form-group">
        <label>Найти статью</label>
        <input type="text" class="form-control" name="autname" placeholder="Имя автора">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-search"></i> Search</button>
    </div>
</form>>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Имя автора</th>
            <th>Название статьи</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td></td>
            <td>{{this.aut_name}}</td>
            <td>{{this.name_article}}</td>
            <td>
                <a href="/articles/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/articles/delete/{{this._id}}" onclick="return confirm('Удалить документ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>